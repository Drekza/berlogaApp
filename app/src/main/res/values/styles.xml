<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">sans-serif-light</item>


    </style>


    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">@color/colorDetailsText</item>
    </style>


    <style name="CustomCheckBoxStyle">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="colorOnSurface">@color/colorRed</item>
    </style>

    <style name="CabinetTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorDetailsText</item>
        <item name="hintTextColor">@color/colorDetailsText</item>
        <item name="android:textColorHint">@color/colorDetailsText</item>
        <item name="colorOnSurface">@color/colorDetailsText</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="navTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="AppTheme.NoActionBar.Launcher">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="ResultDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorDetailsText</item>
    </style>


</resources>